{
	"format_version": "1.20.80",
	"minecraft:block": {
		"description": {
			"identifier": "flax:thatch_slab",
			"menu_category": {
				"category": "construction"
			},
			"traits": {
				"minecraft:placement_position": {
				  "enabled_states": ["minecraft:block_face","minecraft:vertical_half"]
				}
			},
			"states": {
				"flax:double": [false, true]
			  }
		},
