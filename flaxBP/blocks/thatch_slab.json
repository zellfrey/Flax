			"explosion_resistance": 30
			},
			"minecraft:destructible_by_mining": {
			"seconds_to_destroy": 0.3
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "thatch_side"
				  },
				  "end": {
					"texture": "thatch_top"
				  },
				  "up": "end",
				  "down": "end"
			},
			//Using rotatable slab for inventory display. The textures don't match, but its hardly noticable and this will reduce the repeat of the object
			//There are 2 models within this block. "slab" is the traditional model, and rotatable has texture UVs moved around to emmulate a rotating block like a log
			"minecraft:geometry": { 
				  "identifier": "geometry.slab_rotatable",
				  "bone_visibility": { 
					"slab_top": "q.block_state('minecraft:vertical_half') == 'top'", 
					"slab_bottom": "q.block_state('minecraft:vertical_half') == 'bottom'" 
					}
			}
		},
		"permutations": [
