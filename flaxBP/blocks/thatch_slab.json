					"*": {
						"texture": "thatch_side_horizontal"
						},
						"end": {
						"texture": "thatch_top"
						},
						"west": "end",
						"east": "end"
					}
				}
			},
			{
				"condition": "q.block_state('minecraft:vertical_half') == 'bottom' && (query.block_state('minecraft:block_face') == 'north' || query.block_state('minecraft:block_face') == 'south') && !q.block_state('flax:double')",
