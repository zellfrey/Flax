						"texture": "thatch_side_horizontal"
						},
						"end": {
						"texture": "thatch_top"
						},
						"west": "end",
						"east": "end"
					},
				"minecraft:transformation": { "rotation": [0, -90, 0] }
				}
			},
			{
				"condition": "q.block_state('minecraft:vertical_half') == 'bottom' && (query.block_state('minecraft:block_face') == 'up' || query.block_state('minecraft:block_face') == 'down') && !q.block_state('flax:double')",
				"components": {
					"minecraft:collision_box": {
