{
    "format_version": "1.21.50",
    "minecraft:block": {
      "description": {
        "identifier": "flax:rope",
        "menu_category": {
            "category": "none",
            "is_hidden_in_commands": true
        },
        "states": {
          "flax:rope_end": [true, false]
        }
      },
      "components": {
        "minecraft:custom_components": ["flax:on_interact_rope", "flax:on_player_destroy_rope", "flax:on_place_rope"],
        "tag:rope": {},
        "minecraft:flammable": {
          "catch_chance_modifier": 5, 
          "destroy_chance_modifier": 20
        },
        "minecraft:destructible_by_mining": {
          "seconds_to_destroy": 0.3
        },
        "minecraft:destructible_by_explosion": {
          "explosion_resistance": 15
        },
        "minecraft:liquid_detection": {
				"detection_rules": [
					{
						"liquid_type": "water",
						"can_contain_liquid": true
					}
				]
			  },
        "minecraft:geometry": { 
				  "identifier": "geometry.rope",
				  "bone_visibility": { 
					"rope_anchor": "!q.block_state('flax:rope_end')", 
					"rope_end": "q.block_state('flax:rope_end')" 
					}
			  }, 
        "minecraft:placement_filter": {
          "conditions": [
            {
              "allowed_faces": ["down"]
            }
          ]
        },
        "minecraft:loot": "loot_tables/blocks/rope.json"
      },
      "permutations": [
        {
          "condition": "!q.block_state('flax:rope_end')",
          "components": {
            "minecraft:material_instances": {
              "*": {
                "texture": "rope_anchor"
              }
            },
            "minecraft:collision_box": {
              "origin": [-2, 0, -2],
              "size": [4, 16, 4]
            },
            "minecraft:selection_box": {
              "origin": [-2.0, 0.0, -2.0],
              "size": [4.0, 16.0, 4.0]
            }
          }
        },
        {
          "condition": "q.block_state('flax:rope_end')",
          "components": {
            "minecraft:material_instances": {
              "*": {
                "texture": "rope_end"
              }
            },
            "minecraft:collision_box": {
              "origin": [-2, 8, -2],
              "size": [4, 8, 4]
            },
            "minecraft:selection_box": {
              "origin": [-2.0, 8.0, -2.0],
              "size": [4.0, 8.0, 4.0]
            }
          }
        }
      ]
    }
  }
  